@model PurchaseViewModel

@{
    ViewData["Title"] = "Purchase Offer";
}

<h2>Purchase Offer</h2>
<form asp-action="ConfirmPurchase" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="OfferId" />

    <div class="form-group">
        <label>Offer</label>
        <input type="text" class="form-control" asp-for="OfferTitle" readonly />
    </div>

    <div class="form-group">
        <label>Price</label>
        <input type="text" class="form-control" asp-for="Price" readonly />
    </div>

    <div class="form-group">
        <label>Quantity</label>
        <input type="number" class="form-control" asp-for="Quantity" min="1" required />
    </div>

    <button type="submit" class="btn btn-primary">Confirm Purchase</button>
</form>
